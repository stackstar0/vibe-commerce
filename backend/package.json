{
  "name": "vibe-commerce-backend",
  "version": "1.0.0",
  "description": "Backend API for Vibe Commerce Mock E-Com Cart",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedData.js",
    "prod": "NODE_ENV=production node server.js",
    "docker:build": "docker build -t vibe-commerce-backend .",
    "docker:run": "docker run -p 5000:5000 vibe-commerce-backend",
    "docker:dev": "docker build -f Dockerfile.dev -t vibe-commerce-backend-dev . && docker run -p 5000:5000 vibe-commerce-backend-dev",
    "test": "echo \"No tests specified\" && exit 0",
    "deploy:prod": "npm run prod",
    "health-check": "curl -f http://localhost:5000/api/health || exit 1"
  },
  "keywords": [
    "ecommerce",
    "express",
    "mongodb",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}